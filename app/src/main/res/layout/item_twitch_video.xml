<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userInfo"
            type="com.june0122.wakplus.data.entitiy.TwitchUserInfo" />

        <variable
            name="videoInfo"
            type="com.june0122.wakplus.data.entitiy.TwitchVideoInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_thumbnail"
            twitchThumbnailUrl="@{videoInfo.thumbnailUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/twitch_thumbnail_01" />

        <TextView
            android:id="@+id/tv_duration"
            duration="@{videoInfo.duration}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_rounded_corner"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/img_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/img_thumbnail"
            tools:text="6:35:59" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_channel_profile"
            circularImageUrl="@{userInfo.profile_image_url}"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_thumbnail"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:srcCompat="@drawable/yt_profile_ine" />

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{videoInfo.title}"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_channel_profile"
            app:layout_constraintTop_toTopOf="@+id/img_channel_profile"
            tools:text="코이츠www 휴뱅공지하는걸 까먹어버린wwww" />

        <TextView
            android:id="@+id/tv_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{userInfo.display_name}"
            android:textColor="@color/Text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/img_channel_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_video_title"
            tools:text="아이네" />

        <TextView
            android:id="@+id/tv_dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="∙"
            android:textColor="@color/Text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_channel_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_video_title" />

        <TextView
            android:id="@+id/tv_view_count"
            viewCount="@{videoInfo.viewCount}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/Text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_dot1"
            app:layout_constraintTop_toBottomOf="@+id/tv_video_title"
            tools:text="조회수 22만회" />

        <TextView
            android:id="@+id/tv_dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="∙"
            android:textColor="@color/Text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_view_count"
            app:layout_constraintTop_toBottomOf="@+id/tv_video_title" />

        <TextView
            android:id="@+id/tv_elapsed_time"
            elapsedTime="@{videoInfo.publishedAt}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/Text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_dot2"
            app:layout_constraintTop_toBottomOf="@+id/tv_video_title"
            tools:text="1주 전" />

        <ImageView
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            android:src="@drawable/ic_favorite_border" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>